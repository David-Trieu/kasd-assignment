<table class="table is-fullwidth">
    <thead>
    <tr>
        <th>Name</th>
        <th>Location</th>
        <th>Description</th>
        <th></th>
        <th></th>
    </tr>
    </thead>
    <tbody>
    {{#each poi}}
        <tr>
            <td>
                {{name}}
            </td>
            <td>
                Lat={{Location.latitude}},Long={{Location.longitude}}
            </td>
            <td>
                {{Description}}
            </td>
            <td>
                <a href="/overview/deletepoi/{{_id}}" class="ui icon button">
                    <i class="fas fa-trash"></i>
                </a>
            </td>
        </tr>
    {{/each}}
    </tbody>
</table>
